<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', { pageTitle: 'Register' , styles: ['main']}); %>

	<body>
		<%- include('../partials/headerLog'); %>
			<main>
				<div class="container-users">
					<h2>Create Account</h2>

					<form class="form-register" method="POST" action="/user/register" enctype="multipart/form-data">

						<label for="fullName">Your name</label>
						<input type="text" id="fullName" name="fullName" placeholder="First and last name"
							value="<%= locals.oldData?.fullName && oldData?.fullName%>">
						<% if(locals.errors?.fullName) { %>
							<p class="error-message"><%= errors.fullName.msg %></p> 
						<% } %>
						<br>

						<label for="email">Email</label>
						<input type="text" id="email" name="email"
							value="<%= locals.oldData?.email && oldData?.email%>">
						<% if(locals.errors?.email) { %>
							<p class="error-message"><%= errors.email.msg %></p> 
						<% } %>
						<br>

						<label for="password">Password</label>
						<input type="password" id="password" name="password" placeholder="At least 6 characters">
						<% if(locals.errors?.password) { %>
							<p class="error-message"><%= errors.password.msg %></p> 
						<% } %>
						<br>

						<label for="re_password">Re-enter password</label>
						<input type="password" id="re_password" name="re_password">
						<% if(locals.errors?.re_password) { %>
							<p class="error-message"><%= errors.re_password.msg %></p> 
						<% } %>
						<br>

						<label for="avatarInput">Profile image</label>
						<div><input type="file" id="avatarInput" name="avatar" /></div>
						<% if(locals.errors?.avatar) { %>
							<p class="error-message"><%= errors.avatar.msg %></p> 
						<% } %>
						<br>

						<div>
							<button type="submit" class="btn-primary">Continue</button>
						</div>

					</form>

					<div class="container-footer">
						<p>By creating an account, you agree to Brand's</p>
						<div class="link"><p>Already have an account?</p><a href="/user/login">Log in</a></div>
					</div>	
				</div>
			</main>
			<%- include('../partials/footer'); %>
	</body>

</html>